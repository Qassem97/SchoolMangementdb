@model CourseVModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<h2>Courses info</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Description)
        </dd>
        <dt class="col-sm-2">Teacher</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Teacher.Name)
        </dd>
    </dl>

    <hr />
    <a class="btn btn-primary" asp-controller="Course" asp-action="AddCourseAssignment" asp-route-courseId="@Model.Course.Id">Create new Assignment</a>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Assignments)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />

    <h3>
        Students in course
    </h3>
    <table>
        @foreach (var item in Model.Course.StudentsCourses)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Student.Name)</td>
                <td>
                    @Html.ActionLink("Remove", "RemoveStudentToCourse", new { cId = Model.Course.Id, sId = item.StudentId })
                </td>
            </tr>
        }
    </table>
    <hr />
    <h3>
        Students not in course
    </h3>
    <table>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @Html.ActionLink("Add", "AddStudentToCourseSave", new { cId = Model.Course.Id, sId = item.Id })
                </td>
            </tr>
        }
    </table>

    <hr />
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-Id="@Model.Course.Id">Edit</a>
    <a class="btn btn-danger" asp-action="Index">Back to List</a>
</div>




















































